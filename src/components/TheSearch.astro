---
import Search from "astro-pagefind/components/Search";

const { query } = Astro.params;

const translations = {
  placeholder: "Search on Pak",
  clear_search: "Clear",
  load_more: "Load more results",
  search_label: "Search the site",
  filters_label: "Filters",
  zero_results: "No results for [SEARCH_TERM]",
  many_results: "[COUNT] results for [SEARCH_TERM]",
  one_result: "[COUNT] result for [SEARCH_TERM]",
  alt_search:
    "No results for [SEARCH_TERM]. Showing results for [DIFFERENT_TERM] instead",
  search_suggestion:
    "No results for [SEARCH_TERM]. Try one of the following searches:",
  searching: "Searching for [SEARCH_TERM]...",
};
---

<Search
  id="search"
  uiOptions={{ 
    showImages: false,
    translations,
    ranking: {
      pageLength: 0.25,
    }
  }}
/>

<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  const el = document.getElementById("search");
  if (el) {
    const query = new URLSearchParams(location.search).get("q");
    if (query) {
      const input = el.querySelector(`input[type="text"]`);
      if (input) {
        input.value = query;
        input.dispatchEvent(new Event("input", { bubbles: true }));
      }
    }
  }
});
</script>

<style is:global>
  .pagefind-ui {
    --pagefind-ui-primary: rgb(var(--color-one));
    --pagefind-ui-text: rgb(var(--color-front));
    --pagefind-ui-background: transparent;
    --pagefind-ui-border: rgb(var(--color-one-front));
    --pagefind-ui-tag: rgb(var(--color-one-front));
    --pagefind-ui-font: var(--font-sans);
  }

  .pagefind-ui mark {
    @apply bg-transparent! text-one-front! underline! underline-dotted!;
  }

  .pagefind-ui li {
    @apply py-3! border-y-none!;
  }

  .pagefind-ui li > div {
    @apply mt-0!;
  }

  .pagefind-ui .pagefind-ui__result-title {
    font-family: var(--font-post-heading);
  }

  .pagefind-ui .pagefind-ui__result-excerpt {
    font-family: var(--font-post-content);
  }
</style>
